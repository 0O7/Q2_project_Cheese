<% include partials/header %>
<main>

<form method="post" action="/myPage" class="form-horizontal">
<fieldset>
  <legend>Legend</legend>

  <div class="form-group">

    <label for="textArea" class="col-lg-2 control-label">Blog</label>
    <div class="col-lg-10">
      <textarea name="blogPost"class="form-control" rows="3" id="textArea"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Cancel</button>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</fieldset>
</form>
<br>
<br>
<br>

<% results.forEach((blog)=>{%>
<blockquote>
<p><%=blog.post%></p>
<small>Written by <cite title="Source Title"><%=blog.username%></cite></small>
</blockquote>

<%})%>
</main>


<% include partials/footer %>
