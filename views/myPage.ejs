<% include partials/header %>
<main>


<form method="post" action="/myPage" class="form-horizontal">
<fieldset>


  <div class="form-group">

    <label for="textArea" class="col-lg-2 control-label"></label>
    <div class="col-lg-7">
      <textarea name="blogPost"class="form-control" rows="5" id="textArea" placeholder="Write out your thoughts..."></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Cancel</button>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</fieldset>
</form>
<br>
<br>
<br>

<% results.forEach((blog)=>{%>

<blockquote>

<p><%=blog.post%></p>
<small>Written by <cite title="Source Title"><%=blog.username%></cite></small>
<br>
<%=blog.blog_id%>
<a id="edit" href="/editblog/<%=blog.blog_id%>" class="btn btn-default  btn-xs"><p class="text-primary">Edit</p></a>

<button class="btn btn-default btn-xs" id="deletePost" action="<%=blog.blog_id%>" type="button" name="button"><p id="deletePost" action="<%=blog.blog_id%>" class="text-danger">Delete</p></button>
</blockquote>

<%})%>
</main>


<% include partials/footer %>
