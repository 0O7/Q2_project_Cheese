<% include header %>

  <main>
    <br>
<%results.forEach((newsItem)=>{ %>
    <!-- <h5><%=newsItem.news_source%></h5> -->
    <div id="myCarousel-<%=newsItem.news_id%>" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel-<%=newsItem.news_id%>" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel-<%=newsItem.news_id%>" data-slide-to="1"></li>
    <li data-target="#myCarousel-<%=newsItem.news_id%>" data-slide-to="2"></li>
    <li data-target="#myCarousel-<%=newsItem.news_id%>" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">

      <img class="image1"src="client/images/download.jpeg" style="background-size:cover; width:100%; height: 250px;">
      <div class="carousel-caption">
        <h3 class="title1"><%=newsItem.news_source%></h3>
        <span id="<%=newsItem.news_id%>" class="newsAPI hidden"><%=newsItem.news_api%></span>

      </div>
    </div>


    <div class="item">
      <img class="image2" id="image2_<%=newsItem.news_id%>" src="client/images/download.jpeg" style=" width:100%; height: 250px;">
      <div class="carousel-caption">

      <a class="link2" id="link2_<%=newsItem.news_id%>" href="#"><h3 class="title2" id="title2_<%=newsItem.news_id%>"></h3></a>
      </div>
    </div>

    <div class="item">
      <img class="image3" id="image3_<%=newsItem.news_id%>" src="client/images/download.jpeg" style=" width:100%; height: 250px;">
      <div class="carousel-caption">

      <a class='link3' id="link3_<%=newsItem.news_id%>"href="#"><h3 class="title3" id="title3_<%=newsItem.news_id%>"></h3></a>
      </div>
    </div>

    <div class="item">
      <img class="image4" id="image4_<%=newsItem.news_id%>" src="client/images/download.jpeg" style=" width:100%; height: 250px;">
      <div class="carousel-caption">

      <a class="link4" id="link4_<%=newsItem.news_id%>" href="#"><h3 class="title4" id="title4_<%=newsItem.news_id%>">We love the Big Apple!</h3></a>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel-<%=newsItem.news_id%>" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel-<%=newsItem.news_id%>" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%})%>
  </main>

  <% include footer %>
